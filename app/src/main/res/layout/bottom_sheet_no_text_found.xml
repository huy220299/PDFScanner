<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@drawable/background_bottom_sheet">

    <TextView
        android:id="@+id/tv_retake"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="20:5"
        android:gravity="center"
        android:fontFamily="@font/bold"
        android:text="@string/retake"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/tv_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_30sdp"
        android:textColor="@color/main_color"
        android:background="@drawable/background_textview_cancel"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_language"
        android:fontFamily="@font/bold"
        android:textColor="@color/white"
        android:text="Language"
        android:gravity="center"
        android:background="@drawable/background_textview_blue"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@id/tv_retake"
        app:layout_constraintBottom_toBottomOf="@id/tv_retake"
        app:layout_constraintTop_toTopOf="@id/tv_retake"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_retake"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:text="@string/no_text_found_des"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:id="@+id/tv_des"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_back"
        app:layout_constraintBottom_toTopOf="@id/tv_des"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="No text found"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/bold"
        android:textColor="@color/color_333333"
        android:id="@+id/tv_title"/>
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        android:id="@+id/img_back"/>

</androidx.constraintlayout.widget.ConstraintLayout>