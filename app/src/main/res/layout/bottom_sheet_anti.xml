<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    tools:ignore="ContentDescription"
    android:background="@drawable/background_bottom_sheet">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:clipToPadding="false"
        android:id="@+id/recyclerview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textColor="@color/color_333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerview"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/regular"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/tv_color"/>

    <SeekBar
        android:layout_marginEnd="@dimen/_5sdp"
        android:id="@+id/seekbar_transparent"
        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/seekbar_progress_drawable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toStartOf="@id/tv_progress_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_color"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"/>
    <TextView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintTop_toTopOf="@id/seekbar_transparent"
        app:layout_constraintBottom_toBottomOf="@id/seekbar_transparent"
        android:layout_marginEnd="@dimen/_15sdp"
        android:id="@+id/tv_progress_transparent"
        android:textColor="@color/main_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        app:layout_constraintStart_toStartOf="@id/tv_color"
        app:layout_constraintBottom_toTopOf="@id/seekbar_transparent"
        android:text="@string/transparent"
        android:fontFamily="@font/regular"
        android:id="@+id/tv_transparent"/>
    <SeekBar
        android:layout_marginEnd="@dimen/_5sdp"
        android:id="@+id/seekbar_size"

        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/seekbar_progress_drawable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toStartOf="@id/tv_progress_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_transparent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"/>
    <TextView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintTop_toTopOf="@id/seekbar_size"
        app:layout_constraintBottom_toBottomOf="@id/seekbar_size"
        android:layout_marginEnd="@dimen/_15sdp"
        android:id="@+id/tv_progress_size"
        android:textColor="@color/main_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        app:layout_constraintStart_toStartOf="@id/tv_color"
        app:layout_constraintBottom_toTopOf="@id/seekbar_size"
        android:text="@string/size"
        android:fontFamily="@font/regular"
        android:id="@+id/tv_size"/>

    <EditText
        android:id="@+id/edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:singleLine="true"
        android:backgroundTint="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_size"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        app:layout_constraintStart_toStartOf="@id/tv_color"
        app:layout_constraintBottom_toTopOf="@id/edt"
        android:text="@string/text_"
        android:fontFamily="@font/regular"
        android:id="@+id/tv_text"/>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_text"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_close"
        android:id="@+id/img_close"/>
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_done"
        android:layout_marginEnd="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_close"
        app:layout_constraintBottom_toBottomOf="@id/img_close"
        android:id="@+id/img_done" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/anti_counterfeit"
        android:textColor="@color/color_333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_close"
        app:layout_constraintBottom_toBottomOf="@id/img_close"
        android:fontFamily="@font/bold"
        android:id="@+id/tv_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>