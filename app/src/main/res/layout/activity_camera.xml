<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.wysaid.view.CameraRecordGLSurfaceView
        android:id="@+id/my_camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintVertical_bias=".4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.remi.pdfscanner.customview.OverlayCardID
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/my_camera"
        app:layout_constraintBottom_toBottomOf="@id/my_camera"
        app:layout_constraintStart_toStartOf="@id/my_camera"
        app:layout_constraintEnd_toEndOf="@id/my_camera"
        android:id="@+id/overlay_card"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_camera"
        android:src="@drawable/ic_flash"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent=".125"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/img_flash"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doc_recognize"
        android:background="@drawable/background_text_recognize"
        app:layout_constraintBottom_toBottomOf="@id/my_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/regular"
        android:id="@+id/tv_recognize_ocr"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"/>
    <ImageView
        android:visibility="gone"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/ic_back_card"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/my_camera"
        android:id="@+id/img_back_card"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/my_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/layout_bottom">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_take_photo"
            android:id="@+id/img_shot"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_shot"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent=".15"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/img_shot"
            app:layout_constraintBottom_toTopOf="@id/tv_back"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/img_back"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_back"
            android:textColor="@color/white"
            android:text="@string/back"
            android:fontFamily="@font/regular"
            app:layout_constraintBottom_toBottomOf="@id/img_shot"
            app:layout_constraintTop_toBottomOf="@id/img_back"
            app:layout_constraintStart_toStartOf="@id/img_back"
            app:layout_constraintEnd_toEndOf="@id/img_back"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_shot"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent=".15"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/img_shot"
            app:layout_constraintBottom_toTopOf="@id/tv_gallery"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/img_gallery"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gallery"
            android:textColor="@color/white"
            android:text="@string/gallery"
            android:fontFamily="@font/regular"
            app:layout_constraintBottom_toBottomOf="@id/img_shot"
            app:layout_constraintTop_toBottomOf="@id/img_gallery"
            app:layout_constraintStart_toStartOf="@id/img_gallery"
            app:layout_constraintEnd_toEndOf="@id/img_gallery"/>

        <TextView
            android:text="@string/docs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_ocr"
            app:layout_constraintTop_toBottomOf="@id/img_shot"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_30sdp"
            android:id="@+id/tv_doc"/>
        <TextView
            android:text="@string/ocr"
            app:layout_constraintTop_toTopOf="@id/tv_doc"
            app:layout_constraintStart_toEndOf="@id/tv_doc"
            app:layout_constraintEnd_toStartOf="@id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/white"
            android:id="@+id/tv_ocr"/>
        <TextView
            android:text="@string/id_card"
            app:layout_constraintTop_toTopOf="@id/tv_doc"
            app:layout_constraintStart_toEndOf="@id/tv_ocr"
            app:layout_constraintEnd_toStartOf="@id/tv_passport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/white"
            android:id="@+id/tv_card"/>
        <TextView
            android:text="@string/passport"
            app:layout_constraintTop_toTopOf="@id/tv_doc"
            app:layout_constraintStart_toEndOf="@id/tv_card"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/white"
            android:id="@+id/tv_passport"/>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:id="@+id/layout_preview_small"
           android:visibility="gone"
           app:layout_constraintDimensionRatio="1:1"
           app:layout_constraintTop_toTopOf="@id/img_shot"
           app:layout_constraintBottom_toBottomOf="@id/img_shot"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@id/img_shot"           >
           <ImageView
               android:layout_width="0dp"
               android:layout_height="0dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintWidth_percent=".836"
               android:src="@drawable/img_test"
               app:layout_constraintDimensionRatio="1:1"
               android:id="@+id/img_preview_small"/>
           <TextView
               android:id="@+id/tv_image_count"
               android:layout_width="0dp"
               android:layout_height="0dp"
               app:layout_constraintHeight_percent=".328"
               app:layout_constraintDimensionRatio="1:1"
               android:background="@drawable/background_text_circle"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:text="@string/number_1"
               android:gravity="center"
               android:paddingBottom="@dimen/_3sdp"
               android:fontFamily="@font/semi_bold"
               android:textColor="@color/white"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/img_next_shot"
            app:layout_constraintDimensionRatio="56:35"
            app:layout_constraintTop_toTopOf="@id/img_shot"
            app:layout_constraintBottom_toBottomOf="@id/img_shot"
            app:layout_constraintStart_toEndOf="@id/img_shot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".25"
            android:id="@+id/img_next_shot"
            android:visibility="gone"/>

        <LinearLayout
            android:visibility="invisible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_doc"
            android:background="@color/black"
            android:weightSum="3"
            android:gravity="center"
            android:id="@+id/layout_card_option"
            android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center" >
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_single_side"
                        android:id="@+id/img_single_side"/>
                    <TextView
                        android:id="@+id/tv_single_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:text="@string/single_side"
                        android:fontFamily="@font/semi_bold"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_both_side"
                    android:id="@+id/img_both_side"/>
                <TextView
                    android:id="@+id/tv_both_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/both_side"
                    android:fontFamily="@font/semi_bold"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/my_camera"
        app:layout_constraintBottom_toBottomOf="@id/my_camera"
        app:layout_constraintStart_toStartOf="@id/my_camera"
        app:layout_constraintEnd_toEndOf="@id/my_camera"
        android:id="@+id/layout_chose_side_card">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_preview_card_option"
            android:src="@drawable/img_single_side_preview"
            app:layout_constraintDimensionRatio="121:171"
            app:layout_constraintWidth_percent=".6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".2"/>
        <TextView
            android:id="@+id/tv_make_it_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_it_now"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:background="@drawable/background_textview_blue"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/my_camera"
        app:layout_constraintBottom_toBottomOf="@id/my_camera"
        app:layout_constraintStart_toStartOf="@id/my_camera"
        app:layout_constraintEnd_toEndOf="@id/my_camera"
        android:id="@+id/layout_chose_passport">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_preview_passport"
            android:src="@drawable/img_preview_passport"
            app:layout_constraintDimensionRatio="121:171"
            app:layout_constraintWidth_percent=".6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".2"/>
        <TextView
            android:id="@+id/tv_make_it_now_passport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_it_now"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:background="@drawable/background_textview_blue"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>