<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_top"
        android:background="@color/main_color"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_top">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_back"
            android:padding="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/img_back"/>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_undo"
            android:padding="@dimen/_5sdp"
            android:id="@+id/img_undo"
            app:layout_constraintTop_toTopOf="@id/img_back"
            app:layout_constraintBottom_toBottomOf="@id/img_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_redo"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_redo"
            android:padding="@dimen/_5sdp"
            android:id="@+id/img_redo"
            app:layout_constraintTop_toTopOf="@id/img_back"
            app:layout_constraintBottom_toBottomOf="@id/img_back"
            app:layout_constraintStart_toEndOf="@id/img_undo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/background_textview_white"
            android:fontFamily="@font/bold"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/next"
            android:textColor="@color/main_color"
            app:layout_constraintBottom_toBottomOf="@id/img_back"
            app:layout_constraintTop_toTopOf="@id/img_back"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    <me.pqpo.smartcropperlib.view.CropImageView-->
<!--        android:layout_margin="@dimen/_20sdp"-->
<!--        android:id="@+id/iv_crop"-->
<!--        app:layout_constraintTop_toBottomOf="@id/layout_top"-->
<!--        app:layout_constraintBottom_toTopOf="@id/layout_bottom"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp" />-->
    <androidx.viewpager2.widget.ViewPager2
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/viewpager2"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        app:layout_constraintBottom_toTopOf="@id/img_next"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/img_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_next"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintWidth_percent=".08"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"/>
    <ImageView
        android:id="@+id/img_previous"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_next"
        android:rotation="180"
        android:visibility="invisible"
        app:layout_constraintWidth_percent=".08"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_next"
        android:layout_marginStart="@dimen/_20sdp"/>
    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img_next"
        app:layout_constraintBottom_toBottomOf="@id/img_next"
        android:background="@drawable/background_text_black"
        android:text="1/5"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/semi_bold"
        android:id="@+id/tv_current_page"/>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/_30sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_auto_crop"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_auto_scan"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_auto_scan_unable"/>
            <TextView
                android:id="@+id/tv_auto_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/semi_bold"
                android:text="@string/auto_crop_unable"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_replace"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_camera"/>
            <TextView
                android:id="@+id/tv_replace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/semi_bold"
                android:text="@string/retake"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_rotate_left"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rotate_left"/>
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/semi_bold"
                android:text="@string/left"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_rotate_right"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_rotate_right"/>
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/semi_bold"
                android:text="@string/right"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_delete"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_delete"/>
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/semi_bold"
                android:text="@string/delete"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>